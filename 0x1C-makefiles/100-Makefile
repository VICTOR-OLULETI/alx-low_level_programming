CC = gcc
SRC = $(wildcard main.c school.c)
OBJ = $(patsubst %.c, %.o, $(SRC))
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

all: ${NAME} ${OBJ}

${NAME}:: ${OBJ} m.h
	${CC} ${OBJ} -o ${NAME}

clean:
	${RM} -f *~ ${NAME}

oclean:
	${RM} -f ${OBJ}
fclean: clean oclean

re: oclean all


